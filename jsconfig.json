{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "esNext"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}